# i3blocks configuration file
#
# The i3blocks man page describes the usage of the binary,
# and its website describes the configuration:
#
#     https://vivien.github.io/i3blocks


# Global properties
separator=false
separator_block_width=20


# Blocks
[Battery]
command=scripts/battery
markup=pango
interval=3
color=#eeeeee

[User]
command=scripts/user
markup=pango
interval=once
color=#eeeeee

[Arch Logo]
command=scripts/archlogo
markup=pango
interval=once
color=#eeeeee

