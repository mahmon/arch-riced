# i3blocks configuration file
#
# The i3blocks man page describes the usage of the binary,
# and its website describes the configuration:
#
#     https://vivien.github.io/i3blocks


# Global properties
separator=false
separator_block_width=20


# Blocks
[Battery]
command=scripts/battery
markup=pango
color=#eeeeee
interval=3

[Time]
#command=date +"%a %H:%M"
command=scripts/time
markup=pango
color=#eeeeee
interval=1

[User]
command=scripts/user
markup=pango
color=#eeeeee
interval=once

[Arch Logo]
command=scripts/archlogo
markup=pango
color=#eeeeee
interval=once

